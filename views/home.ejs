    <!-- View Tickets -->
    <section class="resume-section" id="open">
        <div class="resume-section-content">
            <h1 class="mb-5">
                Open
                <span class="text-primary">Tickets</span>
            </h1>
            <% for (let ticket of tickets) { %>
                <p class="lead mb-1">
                    <strong>Priority:</strong>
                    <span class="prioritylow"><%= ticket.prioritylow %></span>
                    <span class="prioritymed"><%= ticket.prioritymed %></span>
                    <span class="priorityhigh"><%= ticket.priorityhigh %></span><br />
                    <strong>Date Opened:</strong>
                    <%= ticket.createdAt.toLocaleString([], { timeZone: 'US/Central' }, {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'}, 'en-US')%> CST<br />
                    <strong>Ticket Updated:</strong>
                    <%= ticket.updatedAt.toLocaleString([], { timeZone: 'US/Central' }, {year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit'}, 'en-US')%> CST<br />
                    <strong>Entered by:</strong> <%= ticket.name %><br />
                    <strong>Issue Location:</strong> <%= ticket.helparea %><br />
                    <strong>Description:</strong> <pre class="mx-5 displayDesc"><%= ticket.issuetext %></pre>
                    <strong>Ticket ID:</strong> <%= ticket._id %>
                    <form action="/<%= ticket._id %>?_method=DELETE" method="POST">
                        <a href="<%= ticket._id %>/edit">Close/Update Ticket</a> --
                        <button class="like-anchor">Delete</button>
                    </form>
                </p>
            <hr class="mb-3">
            <% } %>
        </div>
    </section>
    <hr class="m-0" />
    <!-- Add Tickets -->
    <section class="resume-section" id="submit">
        <div class="resume-section-content">
            <h1 class="mb-0">
                Submit A
                <span class="text-primary">Ticket</span>
            </h1>
            <p class="lead mb-5">
                <form action="/" method="POST">
                    <div class="form-group">
                        <p>
                        <label for="name">Your Name:</label>
                        <input type="text" name="name" required>
                        </p>
                    </div>
                    <div class="form-group">
                        <p>
                        <label for="helparea">Issue Area:</label>
                        <select name="helparea" id="helparea" required>
                            <option value="">Select An Option</option>
                            <option value="Website">Website</option>
                            <option value="Mobile App">Mobile App</option>
                            <option value="Backend">Backend</option>
                            <option value="Other">Other</option>
                        </select>
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="issuetext">Describe Issue:</label>
                        <p><textarea class="issuetext" name="issuetext" id="issuetext" cols="30" rows="5" required></textarea></p>
                    </div>
                    <div class="form-group">
                        <p>
                        <label>Priority:  </label>
                            <input type="checkbox" id="prioritylow" name="prioritylow" value="Low">
                            <label for="priortylow">Low</label>
                            <input type="checkbox" id="prioritymed" name="prioritymed" value="Medium">
                            <label for="priortymed">Medium</label>
                            <input type="checkbox" id="priorityhigh" name="priorityhigh" value="High">
                            <label for="priortyhigh">High</label>
                        </p>
                    </div>
                    <div class="form-group">
                        <p><button type="submit" class="like-anchor">Submit Ticket</button></p>
                    </div>
                </form>
            </p>
        </div>
    </section>
    <hr class="m-0" />
